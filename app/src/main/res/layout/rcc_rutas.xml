<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#5E5B5B"
    app:cardCornerRadius="15dp"
    app:cardElevation="20dp"
    app:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="408dp"
        android:layout_height="148dp"
        android:background="#E3F1F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btnEditarRuta"
            android:layout_width="38dp"
            android:layout_height="110dp"
            android:layout_marginEnd="16dp"
            android:background="#FFFFFF"
            android:backgroundTint="#00BCD4"
            android:text="Button"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="textEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.515" />

        <TextView
            android:id="@+id/txtNombreRuta"
            android:layout_width="255dp"
            android:layout_height="40dp"
            android:text="TextView"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/txtCalleOrigen"
            app:layout_constraintEnd_toStartOf="@+id/btnEditarRuta"
            app:layout_constraintStart_toEndOf="@+id/btnEliminarRuta"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.531" />

        <TextView
            android:id="@+id/txtCalleOrigen"
            android:layout_width="255dp"
            android:layout_height="25dp"
            android:layout_marginBottom="4dp"
            android:text="TextView"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/txtCalleDestino"
            app:layout_constraintEnd_toStartOf="@+id/btnEditarRuta"
            app:layout_constraintStart_toEndOf="@+id/btnEliminarRuta" />

        <TextView
            android:id="@+id/txtCalleDestino"
            android:layout_width="255dp"
            android:layout_height="25dp"
            android:layout_marginBottom="20dp"
            android:text="TextView"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnEditarRuta"
            app:layout_constraintStart_toEndOf="@+id/btnEliminarRuta" />

        <Button
            android:id="@+id/btnEliminarRuta"
            android:layout_width="38dp"
            android:layout_height="110dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="#D10606"
            android:text="Button"
            app:icon="@drawable/ic_dialog_close_light"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.484" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>